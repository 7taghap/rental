<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
  <entry key="get-current-key">
  SELECT `AUTO_INCREMENT`
	FROM  INFORMATION_SCHEMA.TABLES
	WHERE TABLE_SCHEMA = 'realmaster'
	AND   TABLE_NAME   = ?;
  </entry>
  <entry key="get-users">
    Select  id, username, name, email, mobile_no, status
    FROM mst_user;
  </entry>
  <entry key="get-users-by-id">
    Select  id, username, name, email, mobile_no, status
    FROM mst_user where id = ?;
  </entry>
    <entry key="save-apartment">
    	INSERT INTO `realmaster`.`mst_apartment`
		 (`name`,
		  `personIncharge`,
		  `aptType`,
		  `mobileNo`,
		  `telNo`,
		  `address1`,
		  `address2`,
		  `status`)
		VALUES
		(?,?,?,?,?,?,?,?);
  </entry>
  <entry key="save-transaction">
  INSERT INTO `realmaster`.`tx_rental`
	(`aptId`,
	`roomId`,
	`dueDate`,
	`txDate`,
	`startDate`,
	`endDate`,
	`deposit`,
	`renterId`,
	`balance`,
	`txType`,
	`provider`,
	`amount`,
	`status`,
	`userId`)
  VALUES
	(?,?,?,?,?,?,?,?,?,?,?,?,?,?);
  </entry>
</properties>